<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addServiceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_home_color"
    android:padding="20dp"
    tools:context=".ui.users.admin.services.services_form.ServiceFormActivity">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:singleLine="false"
            android:text="Display Image"
            android:textColor="@color/label" />

        <ImageView
            android:id="@+id/imgDisplayPreview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:src="@drawable/ic_baseline_image_24" />

        <Button
            android:id="@+id/btnAddServiceImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_green"
            android:text="Upload" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout9"
        app:layout_constraintTop_toTopOf="@+id/linearLayout9">

        <TextView
            android:id="@+id/textView49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/label" />

        <EditText
            android:id="@+id/etAddServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/bg_field"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="@color/data" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description"
        android:textColor="@color/label"
        app:layout_constraintStart_toStartOf="@+id/linearLayout11"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11" />

    <EditText
        android:id="@+id/etAddServiceDescription"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:background="@color/bg_field"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textColor="@color/data"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout11"
        app:layout_constraintStart_toStartOf="@+id/linearLayout11"
        app:layout_constraintTop_toBottomOf="@+id/textView51" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Category"
        android:textColor="@color/label"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/etAddServiceDescription"
        app:layout_constraintTop_toBottomOf="@+id/etAddServiceDescription" />

    <EditText
        android:id="@+id/etAddServiceCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@color/bg_field"
        android:ems="10"
        android:hint="Category"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/data"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAddServiceCategory"
        app:layout_constraintEnd_toStartOf="@+id/btnAddServiceCategory"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etAddServiceDescription" />

    <Button
        android:id="@+id/btnAddServiceCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/blue_green"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/etAddServiceDescription"
        app:layout_constraintTop_toBottomOf="@+id/textView50" />

    <ListView
        android:id="@+id/lvServiceCategory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:isScrollContainer="true"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddService"
        app:layout_constraintEnd_toEndOf="@+id/btnAddServiceCategory"
        app:layout_constraintStart_toStartOf="@+id/etAddServiceCategory"
        app:layout_constraintTop_toBottomOf="@+id/etAddServiceCategory" />

    <Button
        android:id="@+id/btnAddService"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blue_green"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Confirm"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnAddServiceCategory"
        app:layout_constraintStart_toStartOf="@+id/linearLayout9" />

</androidx.constraintlayout.widget.ConstraintLayout>