<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDialogServiceDisplay"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/aquamarine"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/ivDialogServiceDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:adjustViewBounds="true"
                        android:paddingTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_baseline_medical_services_24" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvDialogServiceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="@color/label"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider26"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/blue_green" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Description"
                android:textAllCaps="true"
                android:textColor="@color/label"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDialogServiceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="TextView"
                android:textColor="@color/data"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDialogServiceDelete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/shape_button"
                android:backgroundTint="@color/button_delete"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_baseline_delete_outline_24"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/ivDialogServiceEdit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_button"
                android:backgroundTint="@color/blue_green"
                android:padding="11dp"
                app:srcCompat="@drawable/ic_baseline_edit_24"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/ivDialogServiceClose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/ic_baseline_highlight_off_24"
                app:tint="@color/field_hint" />

        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>