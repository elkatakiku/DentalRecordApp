<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.appointments.appointment_form.AppointmentActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.DentalRecordApp.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appointmentToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_bg2"
            app:popupTheme="@style/Theme.DentalRecordApp.PopupOverlay"
            app:title="New Appointment" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_form_appointment" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>