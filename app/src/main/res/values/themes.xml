<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DentalRecordApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DentalRecordApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DentalRecordApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DentalRecordApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsingBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>

        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#4FC3F7</item>
    </style>

    <style name="CollapsingBar.TextApperance" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MySpinnerDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:background">@color/white</item>
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>

    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:textColorPrimary">@color/data</item>
        <item name="colorControlNormal">@color/blue_green</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

</resources>