<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsit_three_c.dentalrecordapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_final2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_final2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DentalRecordApp">
        <activity
            android:name=".ui.users.admin.services.view_service.ViewServiceActivity"
            android:exported="false"
            android:label="@string/title_activity_view_service"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.users.admin.MainAdminActivity"
            android:exported="false"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.users.admin.services.services_form.ServiceFormActivity"
            android:exported="false"
            android:label="@string/title_activity_add_service"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.users.admin.patients.patient_info.PatientActivity"
            android:exported="false"
            android:label="@string/title_activity_patient"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.users.admin.patients.patient_form.AddPatientActivity"
            android:exported="false"
            android:label="@string/title_activity_add_patient"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".ui.users.admin.employees.employee_form.EmployeeFormActivity"
            android:exported="false"
            android:label="New Employee"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
    </application>

</manifest>