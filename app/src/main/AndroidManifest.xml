<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsit_three_c.dentalrecordapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DentalRecordApp">
        <activity
            android:name=".main_activity.admin.MainAdminActivity"
            android:exported="false"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.users.admin.services.add_services.AddServiceActivity"
            android:exported="false"
            android:label="@string/title_activity_add_service"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.menu.MenuActivity"
            android:exported="false"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.patient_info.PatientActivity"
            android:exported="false"
            android:label="@string/title_activity_patient"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.add_patient.AddPatientActivity"
            android:exported="false"
            android:label="@string/title_activity_add_patient"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
    </application>

</manifest>