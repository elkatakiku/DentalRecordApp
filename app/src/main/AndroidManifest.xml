<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsit_three_c.dentalrecordapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_final2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_final2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DentalRecordApp">
        <activity
            android:name=".ui.dental_chart.DentalChartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="Dental Chart"
            android:theme="@style/Theme.DentalRecordApp.Fullscreen" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.base.BaseListActivity"
            android:exported="false"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.profile.BaseProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.base.BaseFormActivity"
            android:exported="false"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.employees.view_employee.ViewEmployeeActivity"
            android:exported="false"
            android:label="@string/title_activity_view_employee"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.login_signup.LoginOrRegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_login_or_register"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.services.view_service.ViewServiceActivity"
            android:exported="false"
            android:label="@string/title_activity_view_service"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.main.MainAdminActivity"
            android:exported="false"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.patients.view_patient.PatientActivity"
            android:exported="false"
            android:label="@string/title_activity_patient"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.employees.employee_form.EmployeeFormActivity"
            android:exported="false"
            android:label="New Employee"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar"/>
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DentalRecordApp.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>